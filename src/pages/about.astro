  <!-- Contact CTA Section -->
  <section class="py-16 md:py-24 px-4 mb-6 relative overflow-hidden">
    <!-- Imagen de fondo -->
    <div class="absolute inset-0 z-0">
      <LocalImage 
        src="Backgrounds/siluetas-del-sitio-de-construccion_niweog.jpg" 
        alt="Fondo de apartamento" 
        className="w-full h-full object-cover" 
      />
      <!-- Overlay oscuro para mejorar legibilidad -->
      <div class="absolute inset-0 bg-black/60"></div>
    </div>
    
    <div class="max-w-4xl mx-auto text-center relative z-10 max-container">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">¿listo para encontrar tu hogar ideal?</h2>
      <p class="text-white text-lg mb-8 max-w-2xl mx-auto">
        Nuestro equipo está preparado para ayudarte a encontrar la propiedad perfecta para ti y tu familia.
      </p>
      <a href="/" class="inline-block bg-[var(--primary)] text-[var(--background)] font-bold py-3 px-8 rounded-xl transition-transform duration-300 hover:transform hover:scale-105 shadow-lg">
        proyectos
      </a>
    </div>
  </section>

  <!-- Footer -->
  <SocialFooter />
  
  <!-- Pipedrive LeadBooster Chat -->
  <PipedriveChat />
</Layout>

<style>
  /* Estilo para el efecto de máscara del hero */
  .mask-linear-gradient-to-t {
    mask-image: linear-gradient(to top, transparent, black 35%);
  }
  
  /* Animaciones para los elementos al hacer scroll */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  section {
    animation: fadeInUp 0.8s ease-out forwards;
  }
</style>

<script>
  // Importar el servicio para manejar las animaciones de la línea de tiempo
  import { initTimelineAnimations } from '../services/animations/timelineAnimations';
  
  // Inicializar las animaciones cuando el DOM esté cargado
  document.addEventListener('DOMContentLoaded', initTimelineAnimations);
</script>
