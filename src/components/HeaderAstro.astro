---
import GcsImage from './GcsImage.astro';
import DesktopNav from './navigation/DesktopNav.astro';
import MobileNav from './navigation/MobileNav.astro';
---

<header class="fixed top-0 left-0 right-0 z-50 bg-[var(--secondary)]/20 backdrop-blur-sm xl:bg-transparent font-helvetica">
  <div class="flex justify-between items-center px-4 py-2.5 md:px-8 md:py-3 max-container mx-auto">
    <a href="/" class="z-10 xl:hidden">
      <GcsImage 
        publicId="Logos/logohaus_usiwqr.svg" 
        alt="Haus Panama Logo" 
        className="h-8" 
      />
    </a>
    <DesktopNav />
  </div>

  <MobileNav />
</header>

<script>
  import { initMobileMenu } from './navigation/mobileMenuHandler.js';
  document.addEventListener('DOMContentLoaded', initMobileMenu);
</script>
